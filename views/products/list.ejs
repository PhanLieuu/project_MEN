<div class="container mt-5">
    <h1>List Product</h1>
    <a href="/product/add" type="button" class="btn btn-primary btn-lg mt-3">Add New Product</a>
    <table class="table table-dark table-striped mt-3">
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Infomation</th>
            <th>Category</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% 
            products.map(pro=>{%>
                <tr>
                    <td><%= pro.name %></td>
                    <td><%= pro.price %></td>
                    <td><%= pro.quantity %></td>
                    <td><%= pro.info %></td>
                    <td>
                        <% 
                            if(pro.category){%> 
                                    <%= pro.category.name %>
                                <%}
                        %>
                    </td>
                    <td><a href="/product/edit/<%= pro._id  %>" class="btn btn-info">Edit</a></td>
                    <td>
                        <%- include("../part/formDelete",{url:`/product/delete/${pro._id}`}) %>
                        
                      
                    </td>
                </tr>
            <%})
        %>
    </table>
</div>