<div class="container mt-5">
    <h1>List Category</h1>
    <a href="/category/add" type="button" class="btn btn-primary btn-lg mt-3">Add New Category</a>
    <table class="table table-dark table-striped mt-3">
        <tr>
            <th>Category Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% 
            categories.map(cate=>{%>
                <tr>
                    <td><%= cate.name %></td>
                    <td><a href="/category/edit/<%= cate._id  %>" class="btn btn-info">Edit</a></td>
                    <td>
                        <%- include("../part/formDelete",{url:`/category/delete/${cate._id}`}) %>
                    </td>
                </tr>
            <%})
        %>
    </table>
</div>